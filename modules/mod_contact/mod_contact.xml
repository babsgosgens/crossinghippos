<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site">
	<name>mod_contact</name>
      <author>Babs Gosgens</author>
      <creationDate>December 2013</creationDate>
      <copyright>Copyright (C) 2013 Babs GÃ¶sgens, Netherlands</copyright>
      <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
      <authorEmail>babsgosgens@gmail.com</authorEmail>
      <authorUrl>www.crossinghippos.com</authorUrl>
      <version>3.0</version>
	<description>MOD_CONTACT_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_contact">mod_contact.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>forms</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_contact.ini</language>
		<language tag="en-GB">en-GB.mod_contact.sys.ini</language>
	</languages>

	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_CONTACT_HTML" />
	<config>
		<fields name="params">
			<fieldset name="options" label="COM_MODULES_BASIC_FIELDSET_LABEL">
				<field
					name="prepare_content"
					type="radio"
					class="btn-group btn-group-yesno"
					label="MOD_CONTACT_FIELD_PREPARE_CONTENT_LABEL"
					description="MOD_CONTACT_FIELD_PREPARE_CONTENT_DESC"
					default="0">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="gravatar"
					type="text"
					label="MOD_CONTACT_FIELD_GRAVATAR_LABEL"
					description="MOD_CONTACT_FIELD_GRAVATAR_DESC"
					filter="safehtml"
					/>
				<field
					name="text"
					type="editor"
					label="MOD_CONTACT_FIELD_TEXT_LABEL"
					description="MOD_CONTACT_FIELD_TEXT_DESC"
					filter="safehtml"
					/>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
